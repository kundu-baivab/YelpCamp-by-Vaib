<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
  <h1 class="text-center">All Campgrounds!!!</h1>
  <div>
    <a href="/campgrounds/new">Add campground</a>
  </div>
  <% for(let cg of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(cg.images[0]){ %>
                  <img class="img-fluid" src="<%= cg.images[0].url  %>" alt="">
                <% } else{%>
                  <img class="img-fluid" src="https://res.cloudinary.com/diwltkauh/image/upload/v1682099794/YelpCamp/asm9mkgzj9e2ama2zu5h.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <h5 class="card-title"><%= cg.title  %></h5>
                <p class="card-text"><%= cg.description  %></p>
                <p class="card-text">
                    <small class="text-muted"><%= cg.location  %></small>
                </p>
                <a href="/campgrounds/<%= cg._id  %>" class="btn btn-primary">View Campground</a>
            </div>
        </div>
    </div>
  <% } %>

  <script>
    const mapToken ='<%- process.env.MAPBOX_TOKEN %>'
    const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}
  </script>
  <script src="/js/clusterMap.js"></script>