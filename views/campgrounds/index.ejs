<% layout('layouts/boilerplate') %>
<body>
  <h1 class="text-center">All Campgrounds!!!</h1>
  <div>
    <a href="/campgrounds/new">Add campground</a>
  </div>
  <% for(let cg of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= cg.image  %>" alt="">
            </div>
            <div class="col-md-8">
                <h5 class="card-title"><%= cg.title  %></h5>
                <p class="card-text"><%= cg.description  %></p>
                <p class="card-text">
                    <small class="text-muted"><%= cg.location  %></small>
                </p>
                <a href="/campgrounds/<%= cg._id  %>" class="btn btn-primary">View Campground</a>
            </div>
        </div>
    </div>
  <% } %>
</body>
